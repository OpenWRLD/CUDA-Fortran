
module kern_strided

  implicit none
  contains 

  ! b is shorter in size and a is larger
  attributes(global) subroutine stride(b, a, jump)
    real :: a(*), b(*)
    integer, intent(in), value :: jump

    integer :: i, is
   
    i  = blockDim%x * (blockIdx%x - 1) + threadIdx%x 
    is = i * jump
    b(i) = a(is) + 1

  end subroutine stride

end module kern_strided
