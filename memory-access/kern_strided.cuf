
module kern_strided

  implicit none
  contains 

  attributes(global) subroutine stride(a, b, jump)
    real, intent(inout) :: a(*), b(:)
    integer, intent(in), value :: jump

    integer :: i, is
   
    i  = blockDim%x * (blockIdx%x - 1) + threadIdx%x 
    is = i * jump
    b(is) = a(i) + 1

  end subroutine stride

end module kern_strided
